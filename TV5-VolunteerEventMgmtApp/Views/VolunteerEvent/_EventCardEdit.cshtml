@model TV5_VolunteerEventMgmtApp.Models.VolunteerEvent

@using (Html.BeginForm("Edit", "VolunteerEvent", FormMethod.Post, new { id = "editForm-" + Model.Id }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
        <div class="event-card">
            <div>
                <div class="form-group">
                    <label asp-for="Title" class="fw-bold">Title</label>
                    <input asp-for="Title" class="form-control form-control-sm" />
                </div>

                <div class="form-group">
                    <label asp-for="VenueId" class="fw-bold">Venue</label>
                    <select asp-for="VenueId" asp-items="ViewBag.VenueList" class="form-select form-select-sm">
                        <option value="">Select venue...</option>
                    </select>
                </div>
            </div>
            
            <div >
                <div class="form-group">
                    <label asp-for="StartTime" class="fw-bold me-2">Start</label>
                    <input asp-for="StartTime" type="time" class="form-control form-control-sm d-inline-block w-auto" />
                </div>
                <div class="form-group">
                    <label asp-for="EndTime" class="fw-bold me-2">End</label>
                    <input asp-for="EndTime" type="time" class="form-control form-control-sm d-inline-block w-auto" />
                </div>
            </div>
        </div>
        
    
   
    <div class="form-group">
        <label asp-for="Description" class="fw-bold"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    
    
    

  

    <button type="submit" class="btn btn-sm btn-success me-1"><i class="bi bi-check"></i></button>
    <button type="button" class="btn btn-sm btn-secondary" onclick="cancelEdit(@Model.Id, @Model.LocationId)"><i class="bi bi-x-circle"></i></button>
}
