@{
    if (ViewData.ContainsKey("ControllerName"))
    {
        if (ViewData.ContainsKey("returnURL"))
        {
            <a class="" href='@ViewData["returnURL"]'>Back to the @ViewData["ControllerFriendlyName"] List</a>
        }
        else
        {
            <a asp-action="Index">Back to the @ViewData["ControllerFriendlyName"] List</a>
        }
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }
}
