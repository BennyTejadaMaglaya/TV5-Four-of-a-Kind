@model TV5_VolunteerEventMgmtApp.Models.Location

        <form id="createLocationForm" asp-controller="Location" asp-action="Create">
            <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul> </div>
            <div class="row">
        <div class="form-group">
                    <span class="text-danger fw-bold">*</span>
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Director</label>
                    <select name="director" class="form-control" asp-for="DirectorLocations" asp-items="ViewBag.availableDirectors">
                        <option value="">Select a Director</option>
                    </select>
                </div>

                <div class="form-group">
                    <input id="submitLocationCreate" type="submit" value="Create" class="btn btn-purple" />
                </div>
            </div>
           
        </form>



