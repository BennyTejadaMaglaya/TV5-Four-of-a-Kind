<!-- Modal-->
<div class="modal fade" id="addLocationModal" tabindex="-1" role="dialog" aria-labelledby="LocationModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="LocationModalLabel">Add New Location</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @{
                    
					
					var location = new TV5_VolunteerEventMgmtApp.Models.Location();
					var locationCsv = new TV5_VolunteerEventMgmtApp.ViewModels.CsvUploadVM<List<TV5_VolunteerEventMgmtApp.Models.LocationCsvUpload>>()
			{
				Data = new List<TV5_VolunteerEventMgmtApp.Models.LocationCsvUpload>()
			};

					<ul class="nav nav-tabs mb-3" id="locationCreateTabs" role="tablist">
						<li class="nav-item">
							<a class="nav-link fw-bold text-purple active"
							   id="single-location-tab"
							   data-toggle="tab"
							   href="#single"
							   role="tab"
							   aria-controls="single"
							   aria-selected="true"
							   onclick="setLocationTab('single')">Add Single</a>
						</li>
						<li class="nav-item">
							<a class="nav-link fw-bold text-purple"
							   id="bulk-location-tab"
							   data-toggle="tab"
							   href="#bulk"
							   role="tab"
							   aria-controls="bulk"
							   aria-selected="false"
							   onclick="setLocationTab('bulk')">Add Many</a>
						</li>
					</ul>
					<div class="tab-content" id="locationsCreateTabsContent">
						<div class="tab-pane fade show active" id="single-location" role="tabpanel" aria-labelledby="single-tab">
							<partial name="_LocationPartial" model="location" />
						</div>
						<div class="tab-pane fade" id="bulk-location" role="tabpanel" aria-labelledby="bulk-tab">
						<partial name="_locationCsvImportPartial" model="locationCsv" />
						</div>
					</div>
                }

                   
                    
                
            </div>
        </div>
    </div>
</div>