@model TV5_VolunteerEventMgmtApp.ViewModels.CsvUploadVM<List<LocationCsvUpload>>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container">
    <h1 class="text-purple">Upload Location Data</h1>
    <div>
        <h2 class="text-purple">Example Header</h2>
        <span class="fw-bold pb-3 d-block">City,DirectorFirstName,DirectorLastName,DirectorPhone,DirectorEmail</span>
    </div>
    <form asp-controller="CsvImport" asp-action="Location" method="post" enctype="multipart/form-data">
        <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul> </div>

        <div class="form-group">
            <input type="file" name="csvFile" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-purple">Upload</button>
    </form>
    @if (Model != null && Model.Data.Any())
    {
        <h2>Data Preview (@Model.SuccessCount successfully created)</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Chapter</th>
                    <th>Director First</th>
                    <th>Director Last</th>
                    <th>Director Email</th>
                    <th>Director Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Data)
                {
                    <tr>
                        <td>@user.City</td>
                        <td>@user.DirectorFirstName</td>
                        <td>@user.DirectorLastName</td>
                        <td>@user.DirectorEmail</td>
                        <td>@user.DirectorPhone</td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
