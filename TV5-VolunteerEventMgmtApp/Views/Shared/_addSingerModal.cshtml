<!-- Modal-->
<div class="modal fade" id="addSingerModal" tabindex="-1" role="dialog" aria-labelledby="SingerModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="SingerModalLabel">Add New Singer(s)</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
				@{
					var singer = new TV5_VolunteerEventMgmtApp.Models.Singer();
					var singerCsv = new List <TV5_VolunteerEventMgmtApp.Models.SingerCsvUpload>();

					<ul class="nav nav-tabs mb-3" id="singerCreateTabs" role="tablist">
						<li class="nav-item">
							<a class="nav-link fw-bold text-purple active"
							   id="single-tab"
							   data-toggle="tab"
							   href="#single"
							   role="tab"
							   aria-controls="single"
							   aria-selected="true"
							   onclick="setSingerTab('single')">Add Single</a>
						</li>
						<li class="nav-item">
							<a class="nav-link fw-bold text-purple"
							   id="bulk-tab"
							   data-toggle="tab"
							   href="#bulk"
							   role="tab"
							   aria-controls="bulk"
							   aria-selected="false"
							   onclick="setSingerTab('bulk')">Add Many</a>
						</li>
					</ul>
					<div class="tab-content" id="singersCreateTabsContent">
						<div class="tab-pane fade show active" id="single" role="tabpanel" aria-labelledby="single-tab">
						<partial name="_SingerPartial" model="singer" />
						</div>
						<div class="tab-pane fade" id="bulk" role="tabpanel" aria-labelledby="bulk-tab">
						<partial name="_singerCsvImportPartial" model="singerCsv" />
						</div>
					</div>
                }
            </div>
        </div>
    </div>
</div>
