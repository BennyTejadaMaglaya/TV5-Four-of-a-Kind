@model TV5_VolunteerEventMgmtApp.Models.Director

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger fw-bold">*</span>
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger fw-bold">*</span>
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger fw-bold">*</span>
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger fw-bold">*</span>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger fw-bold">*</span>
                <label class="control-label" for="locationSelect">Location</label>
                <div class="m-2">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<TV5_VolunteerEventMgmtApp.ViewModels.CheckOptionVM> checkboxes = ViewBag.AvailableLocations;
                                foreach (var checkbox in checkboxes)
                                {
                                    if (cnt++ % 2 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <div class="form-check form-switch">
                                            <input id="checkbox-@checkbox.ID"
                                                   class="form-check-input"
                                                   type="checkbox"
                                                   name="selectedLocations"
                                                   value="@checkbox.ID"
                                                   @(Html.Raw(checkbox.Assigned ? "checked=\"checked\"" : "")) />
                                            <label class="form-check-label" for="checkbox-@checkbox.ID">@checkbox.DisplayText</label>
                                        </div>
                                    @:</td>
                                }
                            }
                        </tr>
                    </table>
                </div>
                <span asp-validation-for="DirectorLocations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-purple" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
