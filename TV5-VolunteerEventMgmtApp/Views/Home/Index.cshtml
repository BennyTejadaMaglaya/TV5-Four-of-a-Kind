<div id="home-settings">
	<div>
		<button class="btn btn-outline-purple bg-fff"
				data-bs-toggle="modal"
				data-bs-target="#homeSettingsModal"
				type="button">
			<i class="fa-solid fa-gear"></i>
		</button>
	</div>
</div>

<partial name="_HomeSettingsModal" />

<div id="home-header-grid">

	<!-- Image -->
	<div id="home-header-first">
		@if (Model?.Content != null)
		{
			string imageBase64 = Convert.ToBase64String(Model.Content);
			string imageSrc = $"data:{Model.MimeType};base64,{imageBase64}";
			<img src="@imageSrc" alt="Home Image" class="img-fluid rounded" />
		}
		else
		{
			<img src="~/images/TV-choir-02.jpg" alt="Kids singing in a choir" />
		}
	</div>

	<!-- Links -->
	<div id="home-header-second">

		@if (Model?.WelcomeMessage != null || Model?.WelcomeMessage == "")
		{
			<p class="fs-4 mb-4">
				@Model.WelcomeMessage
			</p>
		}
		else
		{
			<p class="fs-4 mb-4">
				Tomorrow’s Voices is always on the lookout for passionate individuals with an affinity for music or just a passion to play a part in making our communities better
			</p>
		}
		<a class="btn w-100 py-4 fs-2 btn-grad-purple" asp-area=""
		   asp-controller="" asp-action="">
			<!-- link -->
			@if (Model?.ButtonText != null || Model?.ButtonText == "")
			{
				<span>
					@Model.ButtonText
				</span>
			}
			else
			{
				<span>
					Sign Up to Volunteer
				</span>
			}
		</a>

		@* <a class="btn w-100 py-2 btn-dark mt-3" asp-area="" *@
		@*    asp-controller="AttendanceSheet" asp-action="Dashboard"> *@
		@* 	Choir Dashboard *@
		@* </a> *@

	</div>

</div>

