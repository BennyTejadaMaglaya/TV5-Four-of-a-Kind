<style>

	#home-settings {
		position: relative;
		width: 100%;
		height: 1px;
	}

		#home-settings > div {
			position: absolute;
			width: 100%;
			display: flex;
			justify-content: end;
			padding: 6px;
		}

	#home-header-grid {
		min-height: 80vh;
		display: grid;
		column-gap: 40px;
		row-gap: 30px;
	}

	#home-header-first {
		border-radius: 10px;
		background: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url('../images/bg-01.jpg');
		background-size: cover;
		box-shadow: 0px 4px 10px 2px #00000040;
		height: 50vh;
	}

		#home-header-first img {
			height: 100%;
			width: 100%;
			object-fit: cover;
			overflow: hidden;
		}

	#home-header-second {
		display: flex;
		flex-direction: column;
		height: 100%;
		gap: 20px;
		align-items: start;
		justify-content: center;
		margin-bottom: 80px;
	}

		#home-header-second .btn {
			width: 100%;
			max-width: 800px !important;
			margin-left: auto !important;
			margin-right: auto !important;
		}

		#home-header-second p {
			text-align: center;
		}

	.home-event-card {
		box-shadow: 0 2px 10px #00000040;
	}

	/* From 768px */
	@@media(width > 768px) {
	}

	/* From 1200px */
	@@media(width > 1200px) {
		#home-header-grid {
			grid-template-columns: 2fr 1fr;
		}

		#home-header-first {
			height: 75vh;
		}

		#home-header-second p {
			text-align: left;
		}
	}

</style>

