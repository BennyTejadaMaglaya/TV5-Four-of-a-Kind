@model TV5_VolunteerEventMgmtApp.Models.AttendanceSheet

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Attendance Sheet</h1>

<hr />
<h4 class="text-danger mb-4">Are you sure you want to delete this attendance sheet?</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @{
                var start = Model.StartTime.ToString("MMM dd, yyyy - hh:mm tt");
            }
            @start
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-10">
            @{
                var end = Model.EndTime.ToString("MMM dd, yyyy - hh:mm tt");
            }
            @end
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.City)
        </dd>
     
    </dl>
    
    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <partial name="_BackToList" />
    </div>
</div>
