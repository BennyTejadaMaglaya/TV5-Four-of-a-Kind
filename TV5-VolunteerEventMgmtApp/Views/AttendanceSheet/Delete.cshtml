@model TV5_VolunteerEventMgmtApp.Models.AttendanceSheet

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Attendance Sheet</h1>

<hr />
<h4 class="text-danger mb-4">Are you sure you want to delete this attendance sheet?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director.FullName)
        </dd>
        <dt class="col-sm-2">
            Date and Time
        </dt>
        <dd class="col-sm-10">
            @{
                var start = Model.StartTime.ToString("MMM dd, yyyy - hh:mm tt");
            }
            @start
        </dd>
        <dt class="col-sm-2">
            Duration (Minutes)
        </dt>
        <dd class="col-sm-10">
            @{
                var duration = Model.EndTime - Model.StartTime;
                var durationInMinutes = duration.TotalMinutes;
            }
            @durationInMinutes
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attendees)
        </dt>
        <dd class="col-sm-10">
            @{
                int kidsCount = Model.Attendees.Count;
                if (kidsCount > 0)
                {
                    var kidsIdList = Model.Attendees.OrderBy(a => a.Singer.FirstName).ThenBy(a => a.Singer.LastName).ToList();
                    <a class="btn btn-purple py-0" role="button" data-bs-toggle="collapse"
                       href="#collapseDocs@(Model.Id)" aria-expanded="false"
                       aria-controls="collapseDocs@(Model.Id)">
                        @kidsCount @(kidsCount == 1 ? "attendee" : "attendees")
                    </a>
                    <div class="collapse mt-1" id="collapseDocs@(Model.Id)">
                        @{
                            foreach (var s in kidsIdList)
                            {
                                <span class="">
                                    @s.Singer.FirstName @s.Singer.LastName
                                </span> <br />
                            }
                        }
                    </div>
                }
                else
                {
                    <span>None</span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
     
    </dl>
    
    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <partial name="_BackToList" />
    </div>
</div>
