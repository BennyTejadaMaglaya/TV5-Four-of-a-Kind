@model TV5_VolunteerEventMgmtApp.Models.Location

@{
	ViewData["Title"] = "Tomorrow's Voices";
}

<h1>Edit Location @(Model.City)</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<span class="text-danger fw-bold">*</span> <label asp-for="City" class="control-label"></label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label>Director</label>
				<select name="director" class="form-control" asp-items="ViewBag.availableDirectors">
					<option value="-1">Select a Director?</option>
				</select>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-purple" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Delete" asp-route-id="@Model.ID" class="text-danger">Delete</a> |
	<partial name="_BackToList" />
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
