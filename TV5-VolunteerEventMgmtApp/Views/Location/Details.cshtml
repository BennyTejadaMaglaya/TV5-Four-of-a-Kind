@model TV5_VolunteerEventMgmtApp.Models.Location

@{
    ViewData["Title"] = "Details";
}

<h4>@(Model.City) Details</h4>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Directors
        </dt>
        <dd class="col-sm-10">

            @foreach(var d in Model.DirectorLocations)
            {
                <span>@d.Director?.FullName</span>
            }
        </dd>
        <dt>
            Singers
        </dt>
        <dd class="col-sm-10">
            @foreach (var d in Model.SingerLocations)
            {
                <span>-  @(d.Singer?.FirstName + " " + d.Singer?.LastName) </span><br/>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
