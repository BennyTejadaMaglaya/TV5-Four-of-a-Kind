@model TV5_VolunteerEventMgmtApp.Models.Location

@{
    ViewData["Title"] = "Remove Location";
}

<h1>Delete Location @(Model.City)</h1>

<hr />
<h4 class="text-danger mb-4">Are you sure you want to delete this location?</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-group">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <partial name="_BackToList" />
    </div>
</div>
