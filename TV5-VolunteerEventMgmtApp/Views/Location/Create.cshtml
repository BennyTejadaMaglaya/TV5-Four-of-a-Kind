@model TV5_VolunteerEventMgmtApp.Models.Location

@{
	ViewData["Title"] = "Add Location";
}

<h1>Create a New Location</h1>

<hr />
<form asp-action="Create">
	<div class="row">
		<div class="col-md-4">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<span class="text-danger fw-bold">*</span> <label asp-for="City" class="control-label"></label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label>Director</label>
				<select name="director" class="form-control" asp-items="ViewBag.availableDirectors">
					<option value="">Select a Director</option>
				</select>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-purple" />
			</div>
		</div>
	</div>
</form>

<div>
	<partial name="_BackToList" />
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
