@model IEnumerable<TV5_VolunteerEventMgmtApp.Models.Singer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form>
    <!-- This is unstyled but im adding the filtering stuff for it here so whoever ends up styling just needs to add classes :) -->
        <div>
        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
            <input type="text" placeholder="First Name" name="searchFirst" value="@ViewData["searchFirst"]"/>
        <input type="text" placeholder="Last Name" name="searchLast" value="@ViewData["searchLast"]" />
            <input type="submit" value="Search"/>
        </div>
    <!-- This is unstyled but im adding the filtering stuff for it here so whoever ends up styling just needs to add classes :)-->
    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="submit" name="actionButton" value="First Name" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Last Name" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Date of Birth" class="btn btn-link" />
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</form>